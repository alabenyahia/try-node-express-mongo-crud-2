<%- include('includes/_header') %>
<h2>Add Todo</h2>
<form action="/" method="post" id="add-form">
    <label for="todo">Add Todo</label>
    <input id="todo" name="text" type="text">
    <input type="submit" value="Add">
</form>

<hr>

<% if (todos.length>0) {%>
    <ul>
        <%for (let i=0; i<todos.length; i++) {%>
            <li>
                <span class="todo-txt">
                    <%= todos[i]['text'] %>
                </span>

                <span class="todo-btns">
                    <a href="/<%= todos[i]['_id']%>"><i class="material-icons">edit</i></a>
                    <a href="/delete/<%= todos[i]['_id']%>"><i class="material-icons">delete</i></a>
                </span>
            </li>
        <%}%>
    </ul>
<%} else {%>
    <p style="margin-bottom: 8px">No todos found...</p>
    <p>Start adding using the form above!</p>
<%}%>

<%- include('includes/_footer') %>